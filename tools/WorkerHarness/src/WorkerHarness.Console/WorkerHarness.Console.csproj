<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<PackAsTool>true</PackAsTool>
	<ToolCommandName>func-harness</ToolCommandName>
	<PackageOutputPath>./nupkg</PackageOutputPath>
	<PackageId>Microsoft.Azure.Functions.Worker.Harness</PackageId>
	<AssemblyName>Microsoft.Azure.Functions.Worker.Harness</AssemblyName>
	<Version>1.0.3</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\WorkerHarness.Core\WorkerHarness.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="nupkg\" />
  </ItemGroup>
	
  <ItemGroup>
	<Content Include=".\harness.settings.json">
		<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		<Pack>false</Pack>
	</Content>
  </ItemGroup>

</Project>
