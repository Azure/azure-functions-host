<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<PackAsTool>true</PackAsTool>
	<ToolCommandName>func-harness</ToolCommandName>
	<PackageOutputPath>./nupkg</PackageOutputPath>
	<PackageId>Microsoft.Azure.Functions.Worker.Harness</PackageId>
	<AssemblyName>Microsoft.Azure.Functions.Worker.Harness</AssemblyName>
	<Description>This package installs the Worker Harness as a dotnet CLI tool, which validates a language worker implementation.</Description>
	<PackageProjectUrl>https://github.com/Azure/azure-functions-host/tree/features/harness/tools/WorkerHarness</PackageProjectUrl>
	<Version>1.0.4</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\WorkerHarness.Core\WorkerHarness.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="nupkg\" />
  </ItemGroup>
	
  <ItemGroup>
	<Content Include=".\harness.settings.json">
		<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		<Pack>false</Pack>
	</Content>
  </ItemGroup>
	
  <ItemGroup>
    <None Update="scenario.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="shared\index.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="shared\invokehttp.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="shared\envreload.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="shared\load.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="shared\start.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
	
  <ProjectExtensions><VisualStudio><UserProperties harness_1settings_1json__JsonSchema="" /></VisualStudio></ProjectExtensions>

</Project>
