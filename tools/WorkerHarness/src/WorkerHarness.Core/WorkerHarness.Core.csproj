<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

    <ItemGroup>
	    <Protobuf Include=".\Protos\**\*.proto" ProtoRoot=".\Protos" />
    </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.21.1" />
    <PackageReference Include="Grpc.Core" Version="2.46.3" />
    <PackageReference Include="Grpc.Tools" Version="2.46.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Extensions.Options" Version="6.0.0" />
  </ItemGroup>

	<ItemGroup>
		<Content Include=".\CoreScenarios\*">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
	  <None Remove="CoreScenarios\Actions.json" />
	  <None Remove="CoreScenarios\Bindings.json" />
	  <None Remove="CoreScenarios\InputData.json" />
	  <None Remove="CoreScenarios\TriggerMetadata.json" />
	</ItemGroup>

	<ItemGroup>
	  <Content Include="CoreScenarios\Actions.json" />
	  <Content Include="CoreScenarios\Bindings.json" />
	  <Content Include="CoreScenarios\InputData.json" />
	  <Content Include="CoreScenarios\TriggerMetadata.json" />
	</ItemGroup>

</Project>
