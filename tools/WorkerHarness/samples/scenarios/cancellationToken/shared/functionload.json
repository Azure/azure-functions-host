{
    "scenarioName": "load a http-trigger function",
    "actions": [
        {
            "actionType": "rpc",
            "actionName": "load a http-trigger function where users handle cancellation token",
            "messages": [
                {
                    "direction": "outgoing",
                    "messageType": "FunctionLoadRequest",
                    "payload": {
                        "FunctionId": "httpFunctionId",
                        "Metadata": {
                            "scriptFile": "HttpTriggerWithCancellation.dll",
                            "EntryPoint": "HttpTriggerWithCancellation.HttpTriggerWithCancellation.Run",
                            "Name": "HttpTriggerWithCancellation",
                            "Bindings": {
                                "req": { "type": "httpTrigger" },
                                "$return": { "type": "http", "direction": "out" }
                            }
                        }
                    }
                },
                {
                    "direction": "incoming",
                    "messageType": "FunctionLoadResponse",
                    "matchingCriteria": [{
                        "query": "$.FunctionLoadResponse.FunctionId",
                        "expected": "httpFunctionId"
                    }],
                    "validators": [{
                        "type": "string",
                        "query": "$.FunctionLoadResponse.Result.Status",
                        "expected": "Success"
                    }]
                }
            ]
        }
    ]
}