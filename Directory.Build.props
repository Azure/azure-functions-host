<Project>

  <!-- paths -->
  <PropertyGroup>
    <RepoRootPath>$(MSBuildThisFileDirectory)</RepoRootPath>
    <SourcePath>$(RepoRootPath)src</SourcePath>
    <EngPath>$(RepoRootPath)eng</EngPath>
    <ToolsPath>$(EngPath)/tools</ToolsPath>
    <ArtifactsPath>$(RepoRootPath)out</ArtifactsPath>
    <ArtifactsPublishOutputName>pub</ArtifactsPublishOutputName>
    <ArtifactsPackageOutputName>pkg</ArtifactsPackageOutputName>
  </PropertyGroup>

  <PropertyGroup>
    <NugetAudit>false</NugetAudit> <!-- TODO: remove when addressing nuget issues -->
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <!--
      When transitioning to common artifacts there may be leftovers in the old locations.
      Exclude them so they do not cause build issues.
    -->
    <DefaultItemExcludes>$(DefaultItemExcludes);bin/**;obj/**</DefaultItemExcludes>
  </PropertyGroup>

  <Import Project="$(EngPath)/targets/Release.props" />

</Project>
