    </ItemGroup>
    <Copy SourceFiles="@(RefSourceFiles)" DestinationFiles="@(RefSourceFiles->'$(OutDir)/compilationrefs/%(RecursiveDir)%(Filename)%(Extension)')" />
  </Target>-->

</Project>
